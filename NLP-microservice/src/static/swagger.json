{
  "openapi": "3.0.0",
  "info": {
    "description": "NLP-microservice",
    "version": "1.0.0",
    "title": "NLP-microservice"
  },
  "servers": [
    {
      "url": "http://localhost:5000/api/docs/"
    }
  ],

  "paths": {
    "/train/uploadDataset": {
      "post": {
        "tags": [
          "Upload train dataset"
        ],
        "summary": "Upload dataset for training word2vec/fastText model",
        "description": "Upload dataset for training word2vec/fastText model.",
        "requestBody": {
          "content": {
            "multipart/form-data": {
              "schema": {
                "type": "object",
                "properties": {
                  "file": {
                    "type": "file",
                    "format": "text/plain"
                  }
                }
              },
              "encoding": {
                "file": {
                  "style": "form"
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Success"
          }
        }
      }
    },
    "/train/{modelId}": {
      "get": {
        "tags": [
          "Train word2vec/fastText"
        ],
        "summary": "Train word2vec/fastText",
        "description": "Train word2vec/fastText",
        "parameters": [{
          "name": "modelId",
          "in": "path",
          "description": "model name: (w2v / fast_text)",
          "required": true,
          "schema": {
              "type": "string",
              "format": "string"
            }
        }],
        "responses": {
          "200": {
            "description": "Success"
          }
        }
      }
    },
    "/match2texts/{modelId}": {
      "post": {
        "tags": [
          "Match two texts"
        ],
        "description": "Match two texts",
        "parameters": [{
          "name": "modelId",
          "in": "path",
          "description": "model name: (w2v / fast_text)",
          "required": true,
          "schema": {
              "type": "string",
              "format": "string"
            }
        }],
        "requestBody": {
          "content": {
            "multipart/form-data": {
              "schema": {
                "type": "object",
                "properties": {
                  "first_text": {
                    "type": "string",
                    "format": "text/plain"
                  },
                  "second_text": {
                    "type": "string",
                    "format": "text/plain"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Success"
          }
        }
      }
    },
    "/maximize-f1-score/{modelId}": {
      "post": {
        "tags": [
          "Maximize F1-score"
        ],
        "description": "Maximize F1-score for selected model",
        "parameters": [{
          "name": "modelId",
          "in": "path",
          "description": "model name: (w2v / fast_text)",
          "required": true,
          "schema": {
              "type": "string",
              "format": "string"
            }
        }],
        "requestBody": {
          "content": {
            "multipart/form-data": {
              "schema": {
                "type": "object",
                "properties": {
                  "file": {
                    "type": "file",
                    "format": "text/plain"
                  }
                }
              },
              "encoding": {
                "file": {
                  "style": "form"
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Success"
          }
        }
      }
    }
  }
}
